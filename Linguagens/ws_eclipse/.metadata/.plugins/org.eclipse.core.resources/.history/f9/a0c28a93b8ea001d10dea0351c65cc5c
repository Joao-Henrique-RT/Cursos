package topicos_java;

import java.util.Scanner;

public class Anotacoes {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		//Classe para anotações.
		
		/*Padrão camelCase é utilizado para pacotes, variaveis, metodos, etc.
		 * 
		 * Para classes utilizamos o padrão Pascalcase, onde a primeira letra é maiúscula
		 * 
		 * 
		 * 
		 * 
		 * 
		 * 
		 * 
		 * 
		 * 
		 * */
		
		Scanner leia = new Scanner(System.in);
		
		System.out.println("Digite três números");
		int a = leia.nextInt();
		int b = leia.nextInt();
		int c = leia.nextInt();
		
		int maior = max(a,b,c);
		
		showResult(maior);
		
		leia.close();
		
	}
	
	/*Public para ser chamada em qualquer classe
	 * Static para ser chamada inddwependente de criação de objeto;
	 * 
	 * INt para retornar um número inteiro;
	 * 
	 * Entre parenteses, os parâmetros(ou valores) da função, os nomes
	 * Não precisam ser iguais aos valores da classe main
	 * 
	 * Variável Aux existe somente dentro da função
	 * */
	public static int max(int x,int y, int z) {
		int aux;
		if(x>y && x>z) {
			aux = x;
		}
			else if(y>z) {
			aux = y;
		}
			else {
			aux = z;
		}
		return aux;
		
		
	}
	
	/*Quando uma função faz uma ação sem retornar um valor 
	 * dizemos que o tipo da função é vazio "void"*/
	public static void showResult(){//value poderia ser qualquer nome
		System.out.println("O maior número é: ");
	}

}
